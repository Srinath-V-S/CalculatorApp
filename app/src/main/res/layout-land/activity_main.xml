<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4C4C4C"

        tools:context=".MainActivity" android:orientation="vertical">

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#777777"
            android:maxLines="1"
            android:inputType="number"
            android:textColorHint="#FFF"
            android:textColor="#FFF"
            android:hint="0" android:gravity="right" android:paddingTop="0pt" android:textSize="30sp"
            android:layout_weight="1" android:layout_margin="0pt" android:id="@+id/et"/>
    <TableLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="0">

        <TableRow android:layout_marginBottom="1pt"
                  android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="AC"
                    android:background="#E0E0E0"
                    android:layout_weight="1"
                    android:onClick="buttonAllClear"
                    android:layout_marginRight="1pt"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/buttonAC" android:textSize="18sp"/>
            <Button
                    android:text="+/-"
                    android:background="#E0E0E0"
                    android:layout_weight="1"
                    android:onClick="buttonPress"
                    android:layout_marginRight="1pt"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/buttonplusminus" android:textSize="18sp"/>
            <Button
                    android:text="%"
                    android:background="#E0E0E0"
                    android:layout_width="30pt"
                    android:layout_weight="1"
                    android:onClick="doPercentage"
                    android:layout_marginRight="1pt"
                    android:layout_height="30pt" android:id="@+id/buttonperc" android:textSize="18sp"/>
            <Button
                    android:text="/"
                    android:background="#F79231"
                    android:layout_width="30pt"
                    android:layout_weight="1"
                    android:onClick="doOperation"
                    android:layout_marginRight="1pt"
                    android:layout_height="30pt" android:id="@+id/buttondiv" android:textColor="#FFFFFF"
                    android:textSize="18sp"/>
        </TableRow>
        <TableRow android:layout_marginBottom="1pt"
                  android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="7"
                    android:onClick="buttonPress"
                    android:background="#E0E0E0"
                    android:layout_weight="1"
                    android:layout_marginRight="1pt"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/button7" android:textSize="18sp"/>
            <Button
                    android:text="8"
                    android:onClick="buttonPress"
                    android:layout_marginRight="1pt"
                    android:background="#E0E0E0"
                    android:layout_weight="1"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/button8" android:textSize="18sp"/>
            <Button
                    android:text="9"
                    android:onClick="buttonPress"
                    android:background="#E0E0E0"
                    android:layout_weight="1"
                    android:layout_marginRight="1pt"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/button9" android:textSize="18sp"/>
            <Button
                    android:text="*"
                    android:background="#F79231"
                    android:layout_weight="1"
                    android:onClick="doOperation"
                    android:layout_marginRight="1pt"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/buttonmul" android:textColor="#FFFFFF"
                    android:textSize="18sp"/>
        </TableRow>
        <TableRow android:layout_marginBottom="1pt"
                  android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="4"
                    android:onClick="buttonPress"
                    android:layout_marginRight="1pt"
                    android:background="#E0E0E0"
                    android:layout_weight="1"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/button4" android:textSize="18sp"/>
            <Button
                    android:text="5"
                    android:onClick="buttonPress"
                    android:background="#E0E0E0"
                    android:layout_weight="1"
                    android:layout_width="30pt"
                    android:layout_marginRight="1pt"
                    android:layout_height="match_parent" android:id="@+id/button5" android:textSize="18sp"/>
            <Button
                    android:text="6"
                    android:onClick="buttonPress"
                    android:background="#E0E0E0"
                    android:layout_marginRight="1pt"
                    android:layout_weight="1"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/button6" android:textSize="18sp"/>
            <Button
                    android:text="-"
                    android:background="#F79231"
                    android:layout_marginRight="1pt"
                    android:layout_weight="1"
                    android:layout_width="30pt"
                    android:onClick="doOperation"
                    android:layout_height="30pt" android:id="@+id/buttonmin" android:textColor="#FFFFFF"
                    android:textSize="18sp"/>
        </TableRow>
        <TableRow android:layout_marginBottom="1pt"
                  android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="1"
                    android:onClick="buttonPress"
                    android:layout_marginRight="1pt"
                    android:background="#E0E0E0"
                    android:layout_weight="1"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/button1" android:textSize="18sp"/>
            <Button
                    android:text="2"
                    android:onClick="buttonPress"
                    android:layout_marginRight="1pt"
                    android:background="#E0E0E0"
                    android:layout_width="30pt"
                    android:layout_weight="1"
                    android:layout_height="30pt" android:id="@+id/button2" android:textSize="18sp"/>
            <Button
                    android:text="3"
                    android:onClick="buttonPress"
                    android:layout_marginRight="1pt"
                    android:background="#E0E0E0"
                    android:layout_weight="1"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/button3" android:textSize="18sp"/>
            <Button
                    android:text="+"
                    android:layout_marginRight="1pt"
                    android:background="#F79231"
                    android:onClick="doOperation"
                    android:layout_width="30pt"
                    android:layout_height="match_parent" android:id="@+id/buttonplus" android:textColor="#FFFFFF"
                    android:layout_weight="1" android:textSize="18sp"/>
        </TableRow>
        <TableRow android:layout_marginBottom="1pt"
                  android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="0">


            <Button
                    android:text="0"
                    android:onClick="buttonPress"
                    android:layout_marginRight="1pt"
                    android:background="#E0E0E0"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/button0"
                    android:layout_weight="2"
                    android:textSize="18sp"/>
            <Button
                    android:text="."
                    android:layout_marginRight="1pt"
                    android:background="#E0E0E0"
                    android:layout_width="15pt"
                    android:onClick="buttonPress"
                    android:layout_height="30pt" android:layout_weight="1" android:id="@+id/buttondot"
                    android:textSize="18sp"/>
            <Button
                    android:text="="
                    android:layout_marginRight="1pt"
                    android:background="#F79231"
                    android:layout_weight="1"
                    android:onClick="doEqualOperation"
                    android:layout_width="3pt"
                    android:layout_height="30pt" android:id="@+id/buttonequals"
                    android:textColor="#FFFFFF" android:textSize="18sp"/>
        </TableRow>
    </TableLayout>
</LinearLayout>